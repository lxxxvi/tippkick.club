%section#teams
  = render DashboardCardComponent.new do |c|
    = c.icon do
      %svg.w-16.text-purple-400.mx-auto{fill: "none", stroke: "currentColor", viewbox: "0 0 24 24", xmlns: "http://www.w3.org/2000/svg"}
        %path{d: "M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z", "stroke-linecap": "round", "stroke-linejoin": "round", "stroke-width": "2"}

    = c.description do
      = t('.you_are_in_count_teams', count: number_of_teams)

    = c.link(name: t('shared.teams'), path: teams_path)

    = c.link_addition do
      .text-xs.leading-loose
        = link_to t('.create_your_own_team'), new_team_path, class: 'link'
        = t('.and_invite_your_friends')
