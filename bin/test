#!/usr/bin/env ruby
require 'fileutils'
include FileUtils

APP_ROOT = File.expand_path('..', __dir__)

def system!(*args)
  system(*args) || abort("\n== Command #{args} failed ==")
end

chdir APP_ROOT do
  puts "\n== Run tests =="
  system! 'bin/rails test'

  puts "\n== Run system tests"
  system! 'bin/rails test:system'

  puts "\n== Run rubocop =="
  system! 'bundle exec rubocop -p'
end
